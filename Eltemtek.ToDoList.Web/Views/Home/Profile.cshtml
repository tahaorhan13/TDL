@{
    Layout = "~/Views/Shared/_LayoutNotMenu.cshtml";

}
@using Eltemtek.ToDoList.Entity.Account.Auth
<html>
<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Create Profile</h4>
                            <p class="card-category">Please Fill In The Requested Information</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">New Password</label>
                                        <input type="password" id="newpassword" name="newpassword" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <button data-button-update class="btn btn-primary pull-right" type="submit">Update Password</button>

                            @*<div id="register-link" class="text-right">
                                    <a class="d-block text-center mt-2 small" asp-controller="Home" asp-action="Login">Sign In</a>
                                </div>*@
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="@Url.VersionedContent("~/bundles/js/app/app.js")"></script>
    <script src="@Url.VersionedContent("~/bundles/js/app/app.api.js")"></script>
    <script src="@Url.VersionedContent("~/bundles/js/app/app.api.account.js")"></script>
    <script src="@Url.VersionedContent("~/bundles/js/app/vw/account/changepassword.js")"></script>
</body>
</html>





